{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server.ts", "src/lib/api/**/*.ts", "src/lib/middleware/**/*.ts", "src/lib/models/**/*.ts", "src/lib/mongodb.ts"]
} 